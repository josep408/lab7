<%- include ('templates/header'); -%>
        <div class ="container">
        <h1> Pixabay Search (Express Version) </h1>
        
        <form action="/results" method="GET">
            <div class="form-group row"><label>Enter keyword</label> <input type="text"  id="keyword" name="keyword" placeholder ="keyword"></div>
            <div class="form-group row"><label>Orientation</label><select id ="orientation" name="orientation">
                        <option value="">Select one</option>
                        <option value="h">Horizontal</option>
                        <option value="v">Vertical</option>
    </select></div>
            <div class="form-group row"><button id="search" type="button" class="btn btn-dark">Search</button></div>
        </form> <br>
        
        <img src='<%= images.hits[0].largeImageURL %>' width='350'>
         <img src='<%= images.hits[1].largeImageURL %>' width='350'>
          <img src='<%= images.hits[2].largeImageURL %>' width='350'>
           <img src='<%= images.hits[3].largeImageURL %>' width='350'>
</div>
